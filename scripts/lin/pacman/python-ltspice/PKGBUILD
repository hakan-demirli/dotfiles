# Me
pkgname=python-ltspice
_name=${pkgname#python-}
pkgver=1.0.6
pkgrel=1
pkgdesc="LTSpice data parsing library for python"
arch=('any')
url="https://github.com/DongHoonPark/ltspice_pytool"
license=('MIT')
depends=('python-deprecated')
makedepends=('python-build' 'python-installer' 'python-setuptools' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$pkgver.tar.gz")

sha256sums=('b9ec773e35262f72379a44c70874c3967100593e34802ec0546af656adfa17a7')


build() {
  cd "$_name-$pkgver"
  python -m build --wheel --no-isolation
}

package() {
  cd "$_name-$pkgver"
  python -m installer --destdir="$pkgdir" dist/*.whl
}
