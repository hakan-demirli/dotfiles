#!/usr/bin/env bash

is_running=$(pgrep "qalculate")
echo "$is_running"

if [ -n "$is_running" ]; then
  echo "just togglespecialworkspace"
  hyprctl dispatch togglespecialworkspace calculator
else
  echo "just qalculate"
  qalculate-qt &
  # hyprctl dispatch focuswindow title:my_player
fi


