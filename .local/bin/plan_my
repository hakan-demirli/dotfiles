#!/usr/bin/env bash
set -euo pipefail

is_running=$(pgrep -f "my_plan" || true)
echo "$is_running"

if [ -n "$is_running" ]; then
  echo "just togglespecialworkspace"
  hyprctl dispatch togglespecialworkspace plan
else
  echo "just plan"
  cd "${HOME}/Desktop/state/" && kitty --title "my_plan" txh &
fi
