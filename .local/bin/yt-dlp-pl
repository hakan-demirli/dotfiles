#!/usr/bin/env bash

# Check if the argument is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <video_link>"
    exit 1
fi

# Get the video link from the argument
video_link=$1

# Run the yt-dlp command with the video link
nix run nixpkgs#yt-dlp -- --embed-metadata --format 'bestvideo[height=720][ext=mp4]+bestaudio[ext=m4a]/best[height=720][ext=mp4]/best[ext=mp4]' --output '%(playlist_index)s. %(title)s.%(ext)s' "$video_link"
