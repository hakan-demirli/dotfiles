#!/usr/bin/env bash
source helix_harpoon_parse

# Check if the buffer_path already exists in the data_file
if grep -q "$buffer_path" "$data_file"; then
  # If it does, call harpoon_update
  helix_harpoon_update
else
  # If it doesn't, add path/filename:row:column to the end of the file
  echo "$buffer_path:$cursor_row:$cursor_col" >> "$data_file"
fi
